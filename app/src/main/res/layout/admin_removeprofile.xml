<!-- res/layout/activity_profile.xml -->
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Profile Header Section with Background Color -->

    <!-- Profile Details Section -->
    <LinearLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FDE3FD"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Profile Picture"
            android:src="@drawable/ic_profile_placeholder" />

        <!-- Organizer Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Organizer"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp">

        <!-- Name Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr Ruffles"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Email Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example@domain.com"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Facility Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Facility:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/profile_facility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facility Name"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/btn_remove_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Profile Picture"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:backgroundTint="#6A1B9A"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_remove_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Profile"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:backgroundTint="#6A1B9A"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_remove_facility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Facility"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:backgroundTint="#6A1B9A"
            android:paddingHorizontal="20dp" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
