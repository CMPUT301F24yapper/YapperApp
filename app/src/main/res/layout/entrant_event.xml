<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:layout_marginBottom="16dp">

        <!-- Event Title and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Event Title -->
            <TextView
                android:id="@+id/event_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Event 1"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Event Date and Time -->
            <TextView
                android:id="@+id/event_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mm/dd/yyyy hh:mm"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Space between Title/Date and Geo Location -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Geo Location Requirement -->
        <TextView
            android:id="@+id/geo_location_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geo Location Required"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- Space between Geo Location and Image -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Image Placeholder (Event Image or Facility Image) -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/event_image"
            android:layout_marginBottom="16dp" />

        <!-- Facility Name -->
        <TextView
            android:id="@+id/facility_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Facility Name: Facility Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Facility Location -->
        <TextView
            android:id="@+id/facility_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Facility Location: Address"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Space between Facility and Organizer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Organizer Name -->
        <TextView
            android:id="@+id/organizer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Organizer: Name"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Space between Organizer and Description -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <!-- Space between Description and Available Slots -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- # of Participants -->
        <TextView
            android:id="@+id/event_number_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="# of Participants: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/event_wl_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting List Capacity:"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Available Slots -->
        <TextView
            android:id="@+id/available_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Slots: 0/50"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Space between Available Slots and Registration Deadline -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Registration Deadline -->
        <TextView
            android:id="@+id/registration_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Deadline: mm/dd/yyyy"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- Space between Deadline and Join Button -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Button Layout -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Centered Horizontal Layout for View and Edit Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <!-- Left Button -->
                <Button
                    android:id="@+id/button_view_participants"
                    android:text="View Participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white" />

                <!-- Right Button -->
                <Button
                    android:id="@+id/button_edit_event"
                    android:text="Edit Event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Join Button - Centered and Overlayed -->
            <Button
                android:id="@+id/join_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/darker_gray"
                android:enabled="false"
                android:text="Join Event"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </FrameLayout>
    </LinearLayout>

</ScrollView>
